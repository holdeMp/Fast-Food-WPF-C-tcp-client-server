<UserControl x:Class="IPZ_fast_food_.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPZ_fast_food_"
        mc:Ignorable="d" Width="800" Height="600"
        >
    <UserControl.Background>
        <ImageBrush ImageSource="images/menu.jpg" />
    </UserControl.Background>
    <Grid Margin="10" Background="White">
        <Grid Margin="0,0,566,0">
            <Button Content="Burgers" Margin="10,31,41,493" Click="Burgers_Click" />
            <Button Content="Beverages" Margin="10,124,41,400" Click="Beverages_Click" />
            <Button Content="Chicken and Sandwiches" Margin="10,229,41,295" Click="Chicken_Click" FontSize="11" />
            <Button Content="Happy Meal" Margin="10,329,41,195" Click="Happy_Click" />

        </Grid>

        <Grid Margin="214,0,0,165" Height="405" VerticalAlignment="Bottom">
            <Grid x:Name="GridPrinc" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
